<h1></h1>

<%- include('../partials/header'); -%>
    <div class="container">
        <h1 class="text-center">Add New Comment to <%= forum.title %></h1>

        <div style="width:70%; margin: 0 auto;">
            <form action="/forums/<%= forum._id %>/comments" method="POST">
                <div class="form-group">
                    <label for="text">Username</label>
                    <input type="text" class="form-control" name="comment[username]" placeholder="name@example.com" required>
                </div>
                <div class="form-group">
                    <label for="message">Message</label> 
                    <textarea class="form-control" name="comment[message]" rows="5" minlength="5"></textarea>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary btn-block">Post</button>
                </div>
            </form>
            <a href="/forums">Go Back</a>
        </div>
        
    </div>
    
<%- include('../partials/footer'); -%>